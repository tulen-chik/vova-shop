@page
@model RegisterModel // Указываем модель для страницы регистрации
@{
    ViewData["Title"] = "Регистрация"; // Устанавливаем заголовок страницы
}

<div class="container">
    <h2>@ViewData["Title"]</h2> <!-- Заголовок страницы -->

    <div class="row">
        <div class="col-md-8">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <!-- Форма для регистрации с маршрутом возврата -->
                <h4>Создать новую учетную запись.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div> <!-- Сводка ошибок валидации -->

                <div class="form-group">
                    <!-- Поле для ввода email -->
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" /> <!-- Поле ввода email -->
                    <span asp-validation-for="Input.Email" class="text-danger"></span> <!-- Сообщение об ошибке для email -->
                </div>

                <div class="form-group">
                    <!-- Поле для ввода пароля -->
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" type="password" /> <!-- Поле ввода пароля -->
                    <span asp-validation-for="Input.Password" class="text-danger"></span> <!-- Сообщение об ошибке для пароля -->
                </div>

                <div class="form-group">
                    <!-- Поле для подтверждения пароля -->
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" /> <!-- Поле ввода подтверждения пароля -->
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> <!-- Сообщение об ошибке для подтверждения пароля -->
                </div>

                <button type="submit" class="btn btn-default">Зарегистрироваться</button> <!-- Кнопка отправки формы -->
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Подключаем скрипты для валидации -->
}
